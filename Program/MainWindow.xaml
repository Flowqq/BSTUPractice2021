<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="Data Base" Height="700" Width="600" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Button x:Name="CreateCollectionButton" Content="Create collection" HorizontalAlignment="Left" Margin="428,21,0,0" VerticalAlignment="Top" Height="39" Width="139" FontSize="16" Click="CreateCollectionButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,21,0,0" Text="Collections" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="118" FontSize="22"/>
        <ListBox x:Name="CollectionsList" Margin="0,77,0,75" BorderBrush="{x:Null}"/>
        <Button Content="Rename" HorizontalAlignment="Left" Margin="355,626,0,0" VerticalAlignment="Top" Height="28" Width="97" Click="RenameCollection"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="480,627,0,0" VerticalAlignment="Top" Height="27" Width="97" Click="DeleteCollection"/>


    </Grid>
</Window>
