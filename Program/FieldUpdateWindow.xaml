<Window x:Class="Program.FieldUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="FieldUpdateWindow" Height="300" Width="450">
    <Grid>
        <TextBox x:Name="ValueTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="266" Margin="92,144,0,0" Height="37" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="92,60,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="92,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Value"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,23,0,0" Text="Edit field" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="70" FontSize="18"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,203,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click" Height="47"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="266" Margin="92,81,0,0" Height="37" FontSize="16"/>

    </Grid>
</Window>
